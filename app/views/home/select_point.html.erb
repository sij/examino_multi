<div class="flex flex-col items-center pt-16">
  <h1 class="text-2xl font-bold mb-6 text-gray-700">Seleziona un punto</h1>
  <div class="max-w-md w-full bg-white p-8 rounded-lg shadow">
    <%= form_with url: home_assign_point_path, method: :post do %>
      <div class="mb-4">
        <%= select_tag :bet_point_id,
              options_from_collection_for_select(
                @bet_points,
                :id,
                lambda { |bp| "#{bp.code} - #{bp.municipality.comune}" }
              ),
              prompt: "Scegli un punto",
              class: "block w-full mt-1 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-gray-700 bg-gray-50 px-3 py-2" %>
      </div>
      <div>
        <%= submit_tag "Assegna punto",
              class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded-md shadow transition duration-150" %>
      </div>
    <% end %>
  </div>
</div>