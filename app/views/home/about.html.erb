<header class="mb-6">
  <div class="space-y-1">
    <h5 class="text-lg font-bold"><%= AppConstants::TITLE %></h5>
    <h5 class="text-lg font-semibold"><%= AppConstants::BY %></h5>
    <h5 class="text-lg font-medium"><%= AppConstants::REV %></h5>
    <h6 class="text-sm text-gray-700">
      Utente: <%= current_user.name %> (<%= current_user.role.name %>)
    </h6>
    <h6 class="text-sm text-gray-700">
      Punto collegato: <%= id_punto %> <%= codice_punto %> <%= comune_punto %>
    </h6>

    <% if current_user.id == 1 %>
      <h5 class="text-lg font-semibold"><%= current_user.owner.gruppo %></h5>
      <h5 class="text-lg font-medium"><%= AppConstants::RAILS_ROOT_APP %></h5>
    <% end %>
    
  </div>
</header>

<!-- FORZA INCLUSIONE CLASSE -->

<% if current_user.id == 1 %>

<section>
  <h2 class="text-2xl font-semibold mb-4">Database connessi in <%= Rails.env %>:</h2>

  <div class="overflow-x-auto">
    <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow">
      <thead class="bg-gray-100">
        <tr>
          <th class="px-4 py-2 text-left text-gray-700 font-medium">Ruolo</th>
          <th class="px-4 py-2 text-left text-gray-700 font-medium">Database</th>
          <th class="px-4 py-2 text-left text-gray-700 font-medium">Sola lettura?</th>
        </tr>
      </thead>
      <tbody>
        <% @databases.each_with_index do |db, index| %>
          <tr class="<%= index.even? ? 'bg-gray-50' : 'bg-white' %> hover:bg-gray-100">
            <td class="px-4 py-2 font-semibold text-gray-800"><%= db[:role] %></td>
            <td class="px-4 py-2 text-gray-800"><%= db[:database] %></td>
            <td class="px-4 py-2">
              <% if db[:replica] %>
                <span class="inline-block px-2 py-1 text-xs font-semibold text-blue-800 bg-blue-200 rounded-full">SÃ¬</span>
              <% else %>
                <span class="inline-block px-2 py-1 text-xs font-semibold text-green-800 bg-green-200 rounded-full">No</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
<% end %>

