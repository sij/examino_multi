<div class="max-w-lg mx-auto mt-10 bg-white p-8 rounded shadow space-y-4">
  <h1 class="text-2xl font-bold mb-4"><%= @user.name %></h1>
  <div>
    <span class="font-semibold">Email address:</span>
    <span><%= @user.email_address %></span>
  </div>
  <div>
    <span class="font-semibold">Info:</span>
    <span><%= @user.info %></span>
  </div>
  <div>
    <span class="font-semibold">Role:</span>
    <span><%= @user.role&.name %></span>
  </div>
  <div>
    <span class="font-semibold">Enabled:</span>
    <span><%= @user.enabled? ? "Yes" : "No" %></span>
  </div>
  <div>
    <span class="font-semibold">Bet point:</span>
    <span><%= @user.bet_point_code %></span>
  </div>
  <div>
    <span class="font-semibold">Login IP:</span>
    <span><%= @user.login_ip.presence || "-" %></span>
  </div>
  <div>
    <span class="font-semibold">Login At:</span>
    <span><%= @user.login_at&.strftime("%Y-%m-%d %H:%M:%S") || "-" %></span>
  </div>

  <div class="pt-4 flex gap-2">
    <%= link_to "Edit", edit_user_path(@user), class: "inline-flex items-center px-4 py-2 border border-green-600 text-green-700 rounded hover:bg-green-50" %>
    <%= link_to "Back", users_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-gray-700 rounded hover:bg-gray-50" %>
  </div>
</div>