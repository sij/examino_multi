<div id="<%= dom_id user %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= user.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Email address:</strong>
    <%= user.email_address %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Info:</strong>
    <%= user.info %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Role:</strong>
    <%= user.role.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Enabled:</strong>
    <%= user.enabled? ? "Yes" : "No" %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Bet point:</strong>
    <%= user.bet_point_code %>
  </div>
</div>
