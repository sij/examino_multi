<div class="bg-gray-50 pt-10 flex justify-start px-4 pl-24">
  <div class="w-full max-w-md bg-white shadow-lg rounded-lg p-4 mt-6">
    <h1 class="text-2xl font-bold mb-4 text-gray-800 text-center">Cambia la tua password</h1>

    <% if flash[:alert] %>
      <div class="mb-4 px-4 py-2 rounded bg-red-100 text-red-700 border border-red-300 text-center">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with model: @user, url: update_my_password_user_path(@user), method: :patch, local: true do |f| %>
      <div class="space-y-3">
        <div>
          <%= f.label :current_password, "Password attuale", class: "block text-gray-700 font-medium mb-1" %>
          <%= f.password_field :current_password, required: true,
                class: "block w-full rounded-md border border-gray-300 px-4 py-1.5 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div>
          <%= f.label :password, "Nuova password", class: "block text-gray-700 font-medium mb-1" %>
          <%= f.password_field :password, required: true,
                class: "block w-full rounded-md border border-gray-300 px-4 py-1.5 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Conferma nuova password", class: "block text-gray-700 font-medium mb-1" %>
          <%= f.password_field :password_confirmation, required: true,
                class: "block w-full rounded-md border border-gray-300 px-4 py-1.5 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
      </div>

      <div class="mt-4">
        <%= f.submit "Aggiorna password",
          class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded shadow transition duration-150" %>
      </div>
    <% end %>
  </div>
</div>