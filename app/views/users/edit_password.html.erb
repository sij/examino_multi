<% content_for :title, "Change Password" %>

<div class="max-w-md mx-auto mt-10">
  <h1 class="text-2xl font-bold mb-6">Change Password</h1>

  <!-- Mostra solo il nome utente -->
  <div class="mb-6 p-4 bg-gray-100 rounded">
    <p class="font-medium text-gray-700">User: <span class="font-bold"><%= @user.name %></span></p>
  </div>

  <% if @user.errors.any? %>
    <div class="mb-4 bg-red-100 text-red-700 px-4 py-2 rounded">
      <ul class="list-disc pl-4">
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: @user, url: update_password_user_path(@user), method: :patch, local: true, class: "space-y-6") do |f| %>
    <div>
      <%= f.label :password, "New password", class: "block font-medium mb-1" %>
      <%= f.password_field :password, required: true, class: "block w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= f.label :password_confirmation, "Confirm new password", class: "block font-medium mb-1" %>
      <%= f.password_field :password_confirmation, required: true, class: "block w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= f.submit "Update Password", class: "w-full bg-blue-600 hover:bg-blue-500 text-white font-medium py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>