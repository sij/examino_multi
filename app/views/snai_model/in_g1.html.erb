<div class="max-w-md ml-12 mt-10 p-6 bg-white rounded-lg shadow-md">
  <h2 class="text-2xl font-semibold mb-4 text-gray-800">Seleziona la data del modello G1</h2>

  <%= form_with url: res_g1_path, method: :get, local: true do %>
    <div class="mb-4">
      <%= label_tag :date, "Data", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= date_field_tag :date, Date.today, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "YYYY-MM-DD" %>
    </div>

    <div class="flex justify-start">
      <%= submit_tag "Visualizza risultati", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" %>
    </div>
  <% end %>
</div>