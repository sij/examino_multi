<div class="w-full max-w-7xl mx-auto py-6">
  <% if notice.present? %>
    <p class="py-2 px-4 bg-green-50 border border-green-300 mb-5 text-green-700 font-medium rounded-md flex items-center gap-2">
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v4a1 1 0 002 0V7zm0 6a1 1 0 10-2 0 1 1 0 002 0z" clip-rule="evenodd" />
      </svg>
      <%= notice %>
    </p>
  <% end %>

  <%= form_with url: g1_details_path, method: :get, local: true do %>
    <div class="flex gap-6 items-end flex-wrap">
      <div class="flex flex-col">
        <label class="text-sm font-medium text-gray-600 mb-2">Da</label>
        <%= date_field_tag :start_date, @start_date, class: "border rounded px-2 py-1.5 w-36", required: true %>
      </div>
      <div class="flex flex-col">
        <label class="text-sm font-medium text-gray-600 mb-2">A</label>
        <%= date_field_tag :end_date, @end_date, class: "border rounded px-2 py-1.5 w-36", required: true %>
      </div>
      <div class="flex items-end mt-4 md:mt-0">
        <%= submit_tag "Filtra", class: "px-4 py-1.5 bg-blue-600 text-white rounded hover:bg-blue-500 transition" %>
      </div>
    </div>
    <div class="flex gap-3 mt-6">
      <%= radio_button_tag :all_points, "false", !@all_points, id: "all_points_false" %>
      <%= label_tag "all_points_false", "Questo punto" %>
      <%= radio_button_tag :all_points, "true", @all_points, id: "all_points_true" %>
      <%= label_tag "all_points_true", "Tutti i punti" %>
    </div>
    <div class="flex gap-3 mt-3 flex-wrap">
      <%= radio_button_tag :filter, "", @filter.blank?, id: "filter_none" %>
      <%= label_tag "filter_none", "Tutti" %>
      <%= radio_button_tag :filter, "operatore", @filter == "operatore", id: "filter_operatore" %>
      <%= label_tag "filter_operatore", "Operatore" %>
      <%= radio_button_tag :filter, "tutti_i_selfy", @filter == "tutti_i_selfy", id: "filter_tutti_i_selfy" %>
      <%= label_tag "filter_tutti_i_selfy", "Tutti i Selfy" %>
      <%= radio_button_tag :filter, "selfservice", @filter == "selfservice", id: "filter_selfservice" %>
      <%= label_tag "filter_selfservice", "SelfService" %>
      <%= radio_button_tag :filter, "selfadvance", @filter == "selfadvance", id: "filter_selfadvance" %>
      <%= label_tag "filter_selfadvance", "SelfAdvance" %>
    </div>
  <% end %>

  <% if @g1_details.any? %>
    <div class="my-4">
      <%= paginate @g1_details %>
    </div>
    <div class="overflow-x-auto border border-gray-200 rounded-lg shadow-sm mt-2">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <% [
              "CSMF", "Data", "Term", "Des Gioco",
              "Num Emesso", "Emesso", "Num Pagato", "Pagato", "Tipologia"
            ].each do |header| %>
              <th class="px-4 py-2 text-left text-sm font-medium text-gray-700 whitespace-nowrap"><%= header %></th>
            <% end %>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @g1_details.each do |detail| %>
            <tr class="hover:bg-gray-50 transition">
              <td class="px-4 py-2 text-sm text-gray-700"><%= detail.csmf_cod %></td>
              <td class="px-4 py-2 text-sm text-gray-700"><%= eu_date(detail.data) %></td>
              <td class="px-4 py-2 text-sm text-gray-700"><%= detail.num_term %></td>
              <td class="px-4 py-2 text-sm text-gray-700"><%= detail.des_gioco %></td>
              <td class="px-4 py-2 text-sm text-gray-700"><%= detail.num_emesso %></td>
              <td class="px-4 py-2 text-sm text-gray-700"><%= eu_number(detail.impo_emesso) %></td>
              <td class="px-4 py-2 text-sm text-gray-700"><%= detail.num_pagato %></td>
              <td class="px-4 py-2 text-sm text-gray-700"><%= eu_number(detail.impo_pagato) %></td>
              <td class="px-4 py-2 text-sm text-gray-700"><%= detail.tipologia %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="my-4">
      <%= paginate @g1_details %>
    </div>
  <% else %>
    <p class="text-center my-10 text-gray-500 italic">Nessun dettaglio G1 trovato.</p>
  <% end %>
</div>