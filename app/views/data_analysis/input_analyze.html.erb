<div class="max-w-xl mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">Analisi Dati</h1>

  <%= form_with url: res_analyze_data_analysis_path, method: :get, local: true, class: "space-y-4", data: { turbo: false } do |f| %>
    <div>
      <%= f.label :start_date, "Data Inizio", class: "block font-medium" %>
      <%= f.date_field :start_date, class: "border rounded p-2 w-full", value: @start_date, autofocus: true %>
    </div>
    <div>
      <%= f.label :end_date, "Data Fine", class: "block font-medium" %>
      <%= f.date_field :end_date, class: "border rounded p-2 w-full", value: @end_date %>
    </div>
    <div>
      <%= f.submit "Analizza", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
    </div>
  <% end %>
</div>