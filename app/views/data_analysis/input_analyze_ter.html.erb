<div class="max-w-md mx-auto py-8">
  <h1 class="text-2xl font-bold mb-4">Analisi Terminali</h1>
  <%= form_with url: res_analyze_ter_data_analysis_path, method: :get, local: true, data: { turbo: false } do |f| %>
    <div>
      <%= f.label :data_start, "Data inizio", class: "block text-gray-700" %>
      <%= f.date_field :start_date, value: @start_date, class: "mt-1 block w-full border-gray-300 rounded-md", autofocus: true %>
    </div>
    <div class="mt-4">
      <%= f.label :data_end, "Data fine", class: "block text-gray-700" %>
      <%= f.date_field :end_date, value: @end_date, class: "mt-1 block w-full border-gray-300 rounded-md" %>
    </div>
    <div class="mt-6">
      <%= f.submit "Analizza", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
    </div>
  <% end %>
</div>